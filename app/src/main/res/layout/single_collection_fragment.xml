<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ProgressBar
            android:id="@+id/collections_fragment_progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/collectionn_fragment_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimaryDark"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/collection_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Markers: Cat and Ben"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/collection_fragment_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="Markers: cat and Ben"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/collection_fragment_userAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_photo"/>

            <TextView
                android:id="@+id/collection_fragment_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Solomon"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="8dp"/>

        </LinearLayout>

    </LinearLayout>

    
</LinearLayout>
